<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/error_layout_progress_drawable"
        android:indeterminateDuration="800"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>

    <TextView android:id="@+id/empty_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/empty_message"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout android:id="@+id/load_fail_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_failed_to_load"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/error_message"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

        <Button android:id="@+id/reload_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="@string/reload"
            android:background="@drawable/reload_btn_selector"
            android:textColor="@color/reload_btn_text_color"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

    <RelativeLayout android:id="@+id/load_no_data_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/no_data_guide_arrows"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:src="@drawable/guide_arrows"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="100dp"/>

        <TextView
            android:id="@+id/no_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/no_data_guide_arrows"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:textColor="#999999"
            android:textSize="20sp"/>

    </RelativeLayout>

</RelativeLayout>